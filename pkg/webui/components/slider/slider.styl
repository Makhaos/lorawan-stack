.container
  margin: auto 0

  :global(.rc-slider-disabled)
    background-color: transparent

    :global(.rc-slider-dot.rc-slider-dot-active)
      border-color: $c-input-border
      opacity: 1

    :global(.rc-slider-track)
      background-color: $c-input-border
      opacity: 1

    :global(.rc-slider-rail)
      background-color: $c-input-border
      opacity: .6

    :global(.rc-slider-dot)
      border-color: $c-input-border
      opacity: .6

    :global(.rc-slider-handle)
      border-color: $c-input-border

      &:hover,
      &:active,
      &:focus
        border-color: $c-input-border

  :global(.rc-slider-rail)
    background-color: $c-input-border

  :global(.rc-slider-track)
    background-color: lighten($c-active-blue, 10)

  :global(.rc-slider-handle)
    margin-top: -6px
    border: solid 2px lighten($c-active-blue, 5)
    width: 16px
    height: 16px

    &:hover,
    &:active,
    &:focus
      border-color: $c-active-blue

  :global(.rc-slider-dot)
    border: solid 2px $c-input-border

  :global(.rc-slider-dot.rc-slider-dot-active)
    border-color: lighten($c-active-blue, 5)
